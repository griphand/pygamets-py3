[Service]
Type=idle
WorkingDirectory=/home/pi/src/pygamets/
ExecStart=/usr/bin/daemon -D /home/pi/src/pygamets/ /usr/bin/python /home/pi/src/pygamets/demo.py
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=pygame-ts-demo
